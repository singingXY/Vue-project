html,
body {
  height: 100%;
  border: 0;
  font-family: "微软雅黑", "Helvetica-Neue", "Helvetica", Arial, sans-serif;
  line-height: 1.5;
  margin: 0;
  padding: 0;
}
div,
span,
object,
iframe,
img,
table,
caption,
thead,
tbody,
tfoot,
tr,
tr,
td,
article,
aside,
canvas,
details,
figure,
hgroup,
menu,
nav,
footer,
header,
section,
summary,
mark,
audio,
video {
  border: 0;
  margin: 0;
  padding: 0;
}
h1,
h2,
h3,
h4,
h5,
h6,
p,
blockquote,
pre,
abbr,
address,
cit,
code,
del,
dfn,
em,
ins,
q,
samp,
small,
strong,
sub,
sup,
b,
i,
hr,
dl,
dt,
dd,
ol,
ul,
li,
fieldset,
legend,
label {
  border: 0;
  font-size: 100%;
  vertical-align: baseline;
  margin: 0;
  padding: 0;
}
article,
aside,
canvas,
figure,
figure img,
figcaption,
hgroup,
footer,
header,
nav,
section,
audio,
video {
  display: block;
}
table {
  border-collapse: separate;
  border-spacing: 0;
}
table caption,
table th,
table td {
  text-align: left;
  vertical-align: middle;
}
li {
  list-style: none;
}
a {
  text-decoration: none;
  -webkit-tap-highlight-color: rgba(255, 0, 0, 0);
}
a img {
  border: 0;
}
:focus {
  outline: 0;
}
* {
  box-sizing: border-box;
}
textarea {
  resize: none;
  appearance: none;
}
input {
  appearance: none;
}
select {
  appearance: none;
  background-color: #fff;
}
button,
input,
optgroup,
select,
textarea {
  border: none;
  background-image: none;
  background-color: transparent;
  -webkit-box-shadow: none;
  -moz-box-shadow: none;
  box-shadow: none;
}
body {
  background: #e1e1e1;
  color: #333;
}
a {
  color: #719f11;
}
a:visited {
  color: #719f11;
}
.main {
  overflow: hidden;
  margin: 0 5px 10px;
  padding-top: 41px;
}
.Router {
  position: relative;
  width: calc(100% - 10px);
  min-height: calc(100vh - 61px);
  transition: all 0.8s ease;
}
.head {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  width: 100vw;
  height: 36px;
  background: #444;
  z-index: 10;
}
.head .logo {
  padding: 5px 0;
  margin: 0 auto;
  width: 100px;
  height: 36px;
}
.head .more {
  margin-right: 10px;
}
.head .back {
  margin-left: 10px;
  width: 20px;
}
.list-type {
  position: fixed;
  left: 0;
  width: 100%;
  padding: 5px;
  margin-top: -5px;
  background: #e1e1e1;
  z-index: 5;
}
.list-type ul {
  display: flex;
  justify-content: center;
  line-height: 2;
  text-align: center;
  background: #f6f6f6;
  border-radius: 5px;
}
.list-type li {
  flex: 1;
  color: #80bd01;
}
.list-type li::before,
.list-type li::after {
  display: inline-block;
  opacity: 0;
  transition: transform 0.3s, opacity 0.2s;
}
.list-type li::before {
  margin-right: 5px;
  content: '[';
  transform: translateX(20px);
}
.list-type li::after {
  margin-left: 5px;
  content: ']';
  transform: translateX(-20px);
}
.list-type li.active::before,
.list-type li.active::after {
  opacity: 1;
  -webkit-transform: translateX(0px);
  -moz-transform: translateX(0px);
  transform: translateX(0px);
}
.list {
  overflow: hidden;
  margin-top: 41px;
  border-radius: 5px;
}
.list li {
  position: relative;
  overflow: hidden;
  width: 100%;
  padding: 10px;
  background: #fff;
  border-bottom: 1px solid #f0f0f0;
}
.list li:hover {
  background: #f5f5f5;
}
.list li img {
  float: left;
  width: 48px;
  height: 48px;
  margin-right: 10px;
  background: #f0f0f0;
}
.list .type {
  display: inline-block;
  padding: 1px 4px;
  margin-right: 5px;
  border-radius: 3px;
  background-color: #e5e5e5;
  color: #999;
  font-size: 12px;
}
.list .typegood {
  background-color: #80bd01;
  color: #fff;
}
.list .typetop {
  background-color: #ff3838;
  color: #fff;
}
.list .title {
  margin: 0 58px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.list .title a {
  color: #333;
}
.list .title a:visited {
  color: #888;
}
.list .count {
  position: absolute;
  top: 20%;
  right: 3%;
  font-size: 10px;
  color: #b4b4b4;
}
.list .count span {
  color: #80bd01;
}
.list .date {
  position: absolute;
  bottom: 20%;
  right: 3%;
  font-size: 10px;
  color: #777;
}
.load-more {
  margin: 20px 0;
  text-align: center;
}
.load-more .prev,
.load-more .next {
  display: inline-block;
  padding: 5px 18px;
  margin: 0 10px;
  background: #fff;
  border-radius: 5px;
  color: #80bd01;
}
.backtotop {
  position: fixed;
  right: 0;
  bottom: 20%;
  width: 50px;
  height: 50px;
  background: #f6f6f6;
  text-align: center;
  border: 1px solid #ccc;
  border-right: 0;
  border-radius: 50% 0 0 50%;
  transition: 1s linear;
  z-index: 11;
}
.backtotop svg {
  width: 40px;
  height: 50px;
}
.slide-fade-enter-active {
  transition: all 0.5s ease;
}
.slide-fade-leave-active {
  transition: all 0.5s ease;
}
.slide-fade-enter,
.slide-fade-leave-active {
  transform: translateX(60px);
  opacity: 0;
}
.slide-left-enter,
.slide-right-leave-active {
  opacity: 0;
  -webkit-transform: translate(100%, 0);
  transform: translate(100%, 0);
}
.slide-left-leave-active,
.slide-right-enter {
  opacity: 0;
  -webkit-transform: translate(-100%, 0);
  transform: translate(-100% 0);
}
.user-list {
  overflow: hidden;
  margin: 10px 0;
  background: #fff;
  border-radius: 5px;
}
.user-list-title {
  padding: 10px;
  background-color: #f6f6f6;
  border-bottom: 1px solid #f0f0f0;
  text-align: center;
}
.markdown-body a {
  color: #719f11;
}
.markdown-body li {
  list-style: disc;
}
@media screen and (min-width: 900px) {
  .head .more,
  .mask {
    display: none;
  }
  .slide-menu {
    position: relative;
    right: 5px;
    top: 41px;
  }
  .Router {
    width: calc(100% - 220px);
  }
  .list-type {
    width: calc(100% - 210px);
  }
}
